{
    "name": "C++ Dev with votien",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-themes",
        "aaron-bond.better-comments",
        "vscode-icons-team.vscode-icons",
        "mhutchie.git-graph"
    ],
    "workspaceFolder": "/workspaces/template",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/template,type=bind",
    "runArgs": [
        "--name=cpp-container",
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "postStartCommand": "bash .devcontainer/banner.sh",
    "remoteUser": "root",
    "containerEnv": {
        "GIT_NAME": "Kevildarknight",
        "GIT_EMAIL": "dat.nguyen2352235@hcmut.edu.vn"
    }
}